/* pages/preview/preview.wxss */
.container {
  padding: 30rpx;
  background-color: #f8f8f8;
  min-height: 100vh;
}

.preview-section {
  background: #fff;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 40rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.preview-image {
  width: 100%;
  height: 750rpx;
  border-radius: 12rpx;
  margin-bottom: 30rpx;
}

.preview-info {
  padding: 20rpx;
  background: #f8f8f8;
  border-radius: 12rpx;
}

.preview-prompt {
  font-size: 28rpx;
  color: #333;
  display: block;
  margin-bottom: 16rpx;
}

.preview-time {
  font-size: 24rpx;
  color: #999;
}

.action-section {
  display: flex;
  gap: 20rpx;
}

.action-btn {
  flex: 1;
  height: 88rpx;
  line-height: 88rpx;
  border-radius: 44rpx;
  font-size: 32rpx;
  border: none;
}

.action-btn::after {
  border: none;
}

.save-btn {
  background: linear-gradient(to right, #ff4444, #ff0000);
  color: #fff;
}

.regenerate-btn {
  background: #fff;
  color: #ff0000;
  border: 2rpx solid #ff0000;
}
