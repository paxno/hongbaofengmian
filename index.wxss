.header {
  width: 100%;
  height: 400rpx; /* 可以根据实际图片调整高度 */
  position: relative;
  z-index: 1;
}

.header-banner {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

/* 修改 scrollarea 的样式，让它在头图下方 */
.scrollarea {
  flex: 1;
  overflow: hidden;
  margin-top: -50rpx; /* 让内容区域和头图有一个重叠效果 */
  border-radius: 24rpx 24rpx 0 0; /* 上方圆角 */
  background: #f7f7f7;
  position: relative;
  z-index: 2;
}

/* 其他样式保持不变 */
